#!/usr/bin/env bash
#redirect to 301

sudo apt-get -y update
sudo apt-get -y install nginx

#run nginx

sudo ufw allow 'Nginx HTTP'
echo "Hello World" | sudo tee /var/www/html/index

sudo sed -i '/listen 80;/a rewrite ^/redirect_me https://www.youtube.com/ permanent;' /etc/nginx/sites-available/default

sudo service nginx restart
